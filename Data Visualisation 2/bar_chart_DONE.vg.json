{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Growth Over Time",
    "fontSize": 20,
    "dy": -10,
    "anchor": "middle"
  },
  "height": 600,
  "data": {
    "url": "vis2_data.csv"
  },
  "transform": [
    {"filter": "datum.Year > 0"}
  ],
  "repeat": {"layer": ["EmissionGrowth", "PopGrowth"]},
  "spec": {
    "layer": [
      {
        "width": {"step": 50, "for": "position"},
        "mark": { "type": "bar", "opacity": 0.8},
        "encoding": {
          "x": {
            "field": "Continent",
            "type": "nominal"
          },
          "y": {
            "aggregate": "sum",
            "field": {"repeat": "layer"},
            "type": "quantitative",
            "title": "% Change (1980 - 2021)"
          },
          "color": {
            "datum": {"repeat": "layer"}, 
            "title": "Metric",
            "scale": {
              "domain": [
                "EmissionGrowth",
                "PopGrowth"
              ],
              "range": [
                "#ff7f00",
                "#4daf4a"
              ]
            }
          },
          "xOffset": {"datum": {"repeat": "layer"}}
        }
      },
      {
        "mark": {
          "type": "text",
          "dx": 20,
          "dy": -20,
          "angle": 0,
          "baseline": "middle",
          "align": "right"
        },
        "encoding": {
          "x": {
            "field": "Continent",
            "type": "nominal"
          },
          "y": {
            "aggregate": "sum",
            "field": "EmissionGrowth",
            "type": "quantitative",
            "title": "% Change (1980 - 2021)"
          },
          "text": {
            "aggregate": "sum",
            "field": "EmissionGrowth",
            "type": "quantitative", 
            "format": ".2f"
          },
          "color": {"value": "#ff7f00"}
        }
      },
      {
        "mark": {
          "type": "text",
          "dx": 20,
          "dy": -20,
          "angle": 0,
          "baseline": "middle",
          "align": "right"
        },
        "encoding": {
          "x": {
            "field": "Continent",
            "type": "nominal"
          },
          "y": {
            "aggregate": "sum",
            "field": "PopGrowth",
            "type": "quantitative",
            "title": "% Change (1980 - 2021)"
          },
          "text": {
            "aggregate": "sum",
            "field": "PopGrowth",
            "type": "quantitative", 
            "format": ".2f"
          },
          "color": {"value": "#4daf4a"}
        }
      }
    ]
  }
}
