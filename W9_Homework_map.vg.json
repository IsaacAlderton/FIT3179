{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Population Density per Country (2023)",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/IsaacAlderton/FIT3179/main/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer":[
    {
      "data": {
        "url": "https://raw.githubusercontent.com/IsaacAlderton/FIT3179/main/oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/IsaacAlderton/FIT3179/main/world_population.csv"
            },
            "key": "country",
            "fields": ["pop2023", "landAreaKm", "worldPercentage"]
          }
        },
        {"calculate": "datum.pop2023 / datum.landAreaKm", "as": "Pop Density"},
        {"calculate": "datum.worldPercentage * 100", "as": "Total Percent"}
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Pop Density",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [5, 10, 25, 50, 200, 500],
            "range": ["#ffffb2", "#fed976", "#feb24c", "#fd8d3c", "#fc4e2a", "#e31a1c", "#b10026"]
            }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "Pop Density", "type": "quantitative", "title": "People per square km"},
          {"field": "pop2023", "type": "quantitative", "title": "Total Population"},
          {"field": "Total Percent", "type": "quantitative", "title": "% of World Population"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/IsaacAlderton/FIT3179/main/WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    }
  ]  
}
