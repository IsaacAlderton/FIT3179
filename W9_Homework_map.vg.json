{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Total Population per Country (2023)",
  "width": 800,
  "height": 400,
  "data": {
    "url": "ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer":[
    {
      "data": {
        "url": "oceans.topojson",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "transform": [
        {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
      ],
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": {
          "field": "note"
        }
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "world_population.csv"
            },
            "key": "country",
            "fields": ["pop2023", "worldPercentage"]
          }
        },
        {"calculate": "datum.pop2023 + 0.1", "as": "Total Population"},
        {"calculate": "datum.worldPercentage * 100", "as": "Total Percent"}
      ],
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "Total Population",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [100000, 10000000, 50000000, 100000000, 1000000000, 1500000000],
            "range": ["#ffffb2", "#fed976", "#feb24c", "#fd8d3c", "#fc4e2a", "#e31a1c", "#b10026"]
            }
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "pop2023", "type": "quantitative", "title": "2023 Population"},
          {"field": "Total Percent", "type": "quantitative", "title": "% of World Population"}
        ]
      }
    },
    {
      "data": {
        "url": "WorldMapWithGraticules.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    }
  ]  
}